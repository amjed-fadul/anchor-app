{
    "manifest_version": 3,
    "name": "Anchor App v2",
    "version": "1.0.0",
    "description": "Anchored! Find it anytime. Save and organize links instantly.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Anchor"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ]
}